<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--&lt;!&ndash;-->
    <services>
        <service id="database_manager" class="Asseter\UserBundle\Service\DatabaseManager">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <!--<argument>plain_value</argument>-->
            <!--<argument>"@doctrine.orm.entity_manager"</argument>-->
            <!--<argument type="service" id="doctrine.orm.entity_manager" />-->
        </service>
        <service id="user_register_email" class="Asseter\UserBundle\Service\EmailRegisterService">
