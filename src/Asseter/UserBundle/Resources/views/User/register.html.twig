{% extends 'AsseterUserBundle::layout.html.twig' %}
{% block javascript %}
    {{ parent() }}
{% endblock %}
{% block header %}
    <header class="page-header headerInfo">Asseter - Registration</header>
{% endblock %}
{% block body %}
    {{ form_start(register) }}
    <div class="row-fluid">
        <div class="col-lg-12">
            <div class="registrationForm">
                <ul>
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <li>{{ flashMessage }}</li>
                    {% endfor %}
                </ul>
                <div class="form-inline">
                    <div class="form-group userNames">
                        {{ form_label(register.firstName) }}
                        {{ form_widget(register.firstName) }}
                        {{ form_label(register.lastName) }}
                        {{ form_widget(register.lastName) }}
                    </div>
                </div>
                <div class="form-inline">
                    <div class="form-group userEmailPasscode">
                        {{ form_label(register.email) }}
                        {{ form_widget(register.email) }}
                        {{ form_label(register.passcode) }}
                        {{ form_widget(register.passcode) }}
                    </div>
                </div>
                <div class="form-group">
                    <a href="">
                        {#<button class="btn btn-default" name="user[register]" id="user_register" type="submit">Register</button>#}
                        {{ form_label(register.register) }}
                        {{ form_widget(register.register) }}
                    </a>
                    <a href="{{ path('user_login') }}" class="login-form">
                        Login
                    </a>
                </div>
                <div class="form-group">
                    {{ form_rest(register) }}
                    {{ form_end(register) }}
                </div>
            </div>
        </div>
    </div>
    <script>
        $( document ).ready(function() {
            $('.login-form').on('click', function(e){
//                e.preventDefault();
            });
        });
    </script>
        {#<a href="{{ path('user_user_homepage') }}" id="login">Back to Login</a>#}
{% endblock %}