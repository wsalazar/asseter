{% extends 'UserUserBundle::layout.html.twig' %}

{% block body %}
<form action="/register/verification-code/{{ verification_code }}" method="post" {{ form_enctype(user) }} >
    <ul>
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <li>{{ flashMessage }}</li>
        {% endfor %}
    </ul>
    <div>
        <label for="verificationCode">Verification Code: </label><input id="verificationCode" name="verificationCode" type="text"  />
    </div>
    <div>
        <input type="hidden" name="verificationCode" value="{{ verification_code }}" />
        <input type="hidden" name="username" value="{{ person }}" />
        <input type="hidden" name="_token" value="{{ csrf_token('user') }}" />
        <input type="submit" name="login" value="Login" />
    </div>
    {#background: none repeat scroll 0 0 #448df6;#}
    {#border: 3px solid #448df6;#}
    {#color: #14c65e;#}
    {#float: left;#}
    {#margin-right: 10px;#}
</form>
{% endblock %}